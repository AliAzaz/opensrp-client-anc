<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:background="@color/sort_filter_bg_light_grey"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/sort_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/register_search_bar_margin"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:padding="@dimen/register_search_bar_min_padding"
        android:singleLine="true"
        android:text="@string/_0_clients_sort_updated"
        android:textColor="@color/light_grey_text"
        android:textSize="@dimen/default_font_size_search_bar" />
</LinearLayout>